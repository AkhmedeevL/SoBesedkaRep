                    </DataTemplate.Triggers>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <ItemsControl x:Name="thursdayEvents" Grid.Column="0" ItemsSource="{Binding SelectedItem.Week[3], ElementName=ListBox1}" Margin="439,58,0,5" HorizontalAlignment="Left" Width="95">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Margin="0,0,0,0"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button x:Name="btn" Cursor="Hand" Content="{Binding ''}" Margin="0" Height="{Binding Height}" Padding="5,5,5,5" Background="LightSteelBlue" BorderThickness="1"/>
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding Title}" Value="">
                            <Setter TargetName="btn" Property="Background" Value="White" />
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <ItemsControl x:Name="fridayEvents" Grid.Column="0" ItemsSource="{Binding SelectedItem.Week[4], ElementName=ListBox1}" Margin="534,58,0,5" HorizontalAlignment="Left" Width="95">
