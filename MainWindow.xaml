<Window x:Name="window" x:Class="SoBesedkaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoBesedkaApp"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:generic="clr-namespace:System.Collections.Generic;assembly=mscorlib"
        mc:Ignorable="d"
        Title="СоБеседка" Height="519.425" Width="837" Closing="Window_Closing">
    <Window.Resources>
        <local:DataSamples x:Key="DataSamples" />
        <local:DateConverter x:Key="weekConverter"/>
    </Window.Resources>
    <Grid>
        <ListBox Name="ListBox1" HorizontalAlignment="Left" Height="311" Margin="15,29,0,0" VerticalAlignment="Top" Width="134" ItemsSource="{Binding Source={StaticResource DataSamples}, Path=Rooms}" SelectedIndex="0" />
        <Button Content="&lt;" HorizontalAlignment="Left" Margin="154,28,0,0" VerticalAlignment="Top" Width="26" Click="Button_Click_1" Height="26" BorderThickness="1"/>
        <Button Content="&gt;" HorizontalAlignment="Left" Margin="795,30,0,0" VerticalAlignment="Top" Width="24" Click="Button_Click" Height="24" BorderThickness="1"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="15,345,0,0" VerticalAlignment="Top" Width="134" Click="Button_Click_2" Height="41"/>
        <Button Content="Редактировать" HorizontalAlignment="Left" Margin="15,391,0,0" VerticalAlignment="Top" Width="134" IsEnabled="false" Height="41" />
        <Menu HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="829">
            <MenuItem Height="24" Header="Мероприятия" />
            <MenuItem Height="24" Header="Участники" Click="MenuItem_Click" />
            <MenuItem Height="24" Header="О программе" />
        </Menu>
        <Button Content="Удалить" HorizontalAlignment="Left" Margin="15,437,0,0" VerticalAlignment="Top" Width="134" IsEnabled="false" Height="41"/>
        <ItemsControl x:Name="mondayEvents" Grid.Column="0" ItemsSource="{Binding ElementName=ListBox1, Path=SelectedItem.Week[0]}" Margin="154,58,0,5" HorizontalAlignment="Left" Width="95">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Margin="0,0,0,0">
                    </StackPanel>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Name="btn" Cursor="Hand" Content="{Binding }" Margin="0" Height="{Binding Path=Height}" Padding="5,5,5,5" Background="LightSteelBlue" BorderThickness="1"/>
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding Path=Title}" Value="">
                            <Setter TargetName="btn" Property="Background" Value="White" />
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <ItemsControl x:Name="tuesdayEvents" Grid.Column="0" ItemsSource="{Binding SelectedItem.Week[1], ElementName=ListBox1}" Margin="249,58,0,5" HorizontalAlignment="Left" Width="95">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Margin="0,0,0,0"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button x:Name="btn" Cursor="Hand" Content="{Binding ''}" Margin="0" Height="{Binding Height}" Padding="5,5,5,5" Background="LightSteelBlue" BorderThickness="1"/>
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding Title}" Value="">
                            <Setter TargetName="btn" Property="Background" Value="White" />
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <ItemsControl x:Name="wednesdayEvents" Grid.Column="0" ItemsSource="{Binding SelectedItem.Week[2], ElementName=ListBox1}" Margin="344,58,0,5" HorizontalAlignment="Left" Width="95">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Margin="0,0,0,0"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button x:Name="btn" Cursor="Hand" Content="{Binding Title}" Margin="0" Height="{Binding Height}" Padding="5,5,5,5" Background="LightSteelBlue" BorderThickness="1"/>
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding Title}" Value="">
                            <Setter TargetName="btn" Property="Background" Value="White" />
