<Window x:Class="SoBesedkaApp.UsersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoBesedkaApp"
        mc:Ignorable="d"
         WindowStartupLocation="CenterScreen"
        Title="Пользователи" Height="400" Width="500" ResizeMode="NoResize">
    <Grid Margin="0,0,3,0">
        <ListBox Name="listBoxUsers" HorizontalAlignment="Left" Margin="10,10,0,10" VerticalAlignment="Stretch" Width="290" ItemsSource="{Binding Users}" SelectionChanged="listBoxUsers_SelectionChanged">
            <ListBox.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=isAdmin}" Value="True">
                            <Setter Property="Content" Value="{Binding Path=UserFIO}"/>
                            <Setter Property="ContentStringFormat" Value="{}{0} (Администратор)"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
        <Button x:Name="AdminButton" Content="Сделать администратором" HorizontalAlignment="Left" Height="40" Margin="314,10,0,0" VerticalAlignment="Top" Width="160" Click="AdminButton_Click" IsEnabled="False"/>
        <Button x:Name="DeleteButton" Content="Удалить" HorizontalAlignment="Left" Margin="314,70,0,0" VerticalAlignment="Top" Width="160" Height="40" Click="DeleteButton_Click" IsEnabled="False"/>
        <Button x:Name="RemoveAdminButton" Content="Разжаловать" HorizontalAlignment="Left" Margin="314,130,0,0" VerticalAlignment="Top" Width="160" Height="40" Click="RemoveAdminButton_Click" IsEnabled="False"/>

    </Grid>
</Window>
