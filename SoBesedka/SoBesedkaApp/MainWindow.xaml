<Window x:Class="SoBesedkaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoBesedkaApp"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:generic="clr-namespace:System.Collections.Generic;assembly=mscorlib"
        mc:Ignorable="d"
        Title="СоБеседка" Height="519.425" Width="640" Closing="Window_Closing">
    <Window.Resources>
        <local:DataSamples x:Key="DataSamples" />
    </Window.Resources>
    <Grid>
        <ListBox Name="ListBox1" HorizontalAlignment="Left" Height="311" Margin="15,29,0,0" VerticalAlignment="Top" Width="200" ItemsSource="{Binding Source={StaticResource DataSamples}, Path=rooms}" SelectedIndex="0" />
        <DatePicker x:Name="DatePicker" HorizontalAlignment="Left" Margin="315,29,0,0" VerticalAlignment="Top" Width="212" BorderThickness="0" Background="#FFDDDDDD" SelectedDate="{x:Static system:DateTime.Now}" Height="24">
            <DatePicker.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                    <GradientStop Color="#FFA3AEB9" Offset="0"/>
                    <GradientStop Color="#FF8399A9" Offset="0.375"/>
                    <GradientStop Color="#FF718597" Offset="0.375"/>
                    <GradientStop Color="#FFDDDDDD" Offset="1"/>
                </LinearGradientBrush>
            </DatePicker.BorderBrush>
        </DatePicker>
        <Button Content="&lt;" HorizontalAlignment="Left" Margin="220,29,0,0" VerticalAlignment="Top" Width="95" Click="Button_Click_1" Height="24" BorderThickness="0"/>
        <Button Content="&gt;" HorizontalAlignment="Left" Margin="527,29,0,0" VerticalAlignment="Top" Width="95" Click="Button_Click" Height="24" BorderThickness="0"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="15,345,0,0" VerticalAlignment="Top" Width="200" Click="Button_Click_2" Height="41"/>
        <Button Content="Редактировать" HorizontalAlignment="Left" Margin="15,391,0,0" VerticalAlignment="Top" Width="200" IsEnabled="false" Height="41" />
        <Menu HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="632">
            <MenuItem Height="24" Header="Мероприятия" />
            <MenuItem Height="24" Header="Участники" Click="MenuItem_Click" />
            <MenuItem Height="24" Header="Комнаты" Click="MenuItem_Click_1" />
            <MenuItem Height="24" Header="О программе" />
        </Menu>
        <Button Content="Удалить" HorizontalAlignment="Left" Margin="15,437,0,0" VerticalAlignment="Top" Width="200" IsEnabled="false" Height="41"/>

        <ItemsControl x:Name="tStack" Grid.Column="0" ItemsSource="{Binding ElementName=ListBox1, Path=SelectedItem.Events}" Margin="220,53,0,10" HorizontalAlignment="Left" Width="402">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical"></StackPanel>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Name="btn" Cursor="Hand" Content="{Binding }" Margin="0,5,0,5" Height="{Binding Path=Height}" Padding="5,5,5,5" Background="LightSteelBlue" BorderThickness="0"/>
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding Path=Title}" Value="">
                            <Setter TargetName="btn" Property="Background" Value="White" />
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
