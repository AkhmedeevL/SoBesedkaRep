<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoBesedkaApp"
        x:Class="SoBesedkaApp.RoomsWindow"
        mc:Ignorable="d"
        Title="RoomsWindow" Height="450" Width="505.854">
    <Window.Resources>
        <local:DataSamples x:Key="DataSamples" />
    </Window.Resources>
    <Grid>
        <ListBox x:Name="RoomsListBox" HorizontalAlignment="Left" Height="400" Margin="10,10,0,0" VerticalAlignment="Top" Width="281" ItemsSource="{Binding rooms, Source={StaticResource DataSamples}}"/>
        <Button x:Name="AddButton" Content="Добавить комнату" HorizontalAlignment="Left" Height="42" Margin="296,10,0,0" VerticalAlignment="Top" Width="194" Click="AddButton_Click"/>
        <Button x:Name="DeleteButton" Content="Удалить комнату" HorizontalAlignment="Left" Height="42" Margin="296,57,0,0" VerticalAlignment="Top" Width="194" Click="DeleteButton_Click"/>

    </Grid>
</Window>
